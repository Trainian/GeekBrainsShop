@model IEnumerable<GeekBrainsShop.Domain.Employees.Footwear>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Trademark.TrademarkName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VendorCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsSale)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsTop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsNew)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Trademark.TrademarkName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VendorCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalePrice)
        </td>
        <td>
            <img src="@item.ImageLink" alt="Image">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsSale)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsTop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsNew)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FootwearId }) |
            @Html.ActionLink("Details", "Details", new { id=item.FootwearId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FootwearId })
        </td>
    </tr>
}

</table>
