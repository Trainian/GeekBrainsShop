<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>


    <div class="header">
        <img src="~/Content/Images/top_logo.jpg" />
    </div>

    <div class="body_style">
        <div class="menu">
            <ul class="ul_menu">
                <li><a href=@Url.Action("Index", "Home")>Главная</a></li>
                <div class="ShowCatalogs">
                    <li>
                        <a href=@Url.Action("Index", "Catalog")>Каталог</a>
                        <ul>
                            <li><a href=@Url.Action("Index", "Catalog")>Женщинам</a></li>
                            <li><a href=@Url.Action("Index", "Catalog")>Мужчинам</a></li>
                            <li><a href=@Url.Action("Index", "Catalog")>Детям</a></li>
                        </ul>
                    </li>
                </div>
                <li><a href=@Url.Action("Contact", "Home")>Контакты</a></li>
            </ul>
        </div>
        <div class="container">
            <div class="brands">
                <img src="~/Content/Images/brands/instreet.png" alt="instreet">
                <img src="~/Content/Images/brands/zenden.png" alt="zenden">
                <img src="~/Content/Images/brands/dixer.png" alt="dixer">
                <img src="~/Content/Images/brands/rieker.png" alt="riker">
                <img src="~/Content/Images/brands/thomasmunz.png" alt="thomasmunz">
                <img src="~/Content/Images/brands/marcotozzi.png" alt="marcotozzi">
            </div>
            @RenderBody()
        </div>
    </div>

        <hr />
        <footer>
            <div id="footers">
                <p id="big">Дизайн</p>
                <p>hrenden@inputmail.ru</p>
                <p>©Все права защищены!</p>
                <p>Design by Vitali Zakharoff</p>
            </div>
            <div id="social">
                <div id="vk"></div>
                <div id="facebook"></div>
                <div id="twitter"></div>
            </div>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
